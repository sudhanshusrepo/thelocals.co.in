{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**"
            ],
            "env": [
                "GEMINI_API_KEY",
                "POSTGRES_URL",
                "POSTGRES_PRISMA_URL",
                "POSTGRES_URL_NON_POOLING",
                "POSTGRES_PASSWORD"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "test": {
            "outputs": []
        },
        "lint": {
            "outputs": []
        }
    }
}